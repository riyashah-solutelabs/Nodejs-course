extends layouts/main-layout.pug

block styles 
    link(rel="stylesheet", href="/css/product.css")

block content 
   main
            //- h1 My Products 
            //- p List of all the products....
            if prods.length > 0
                .grid
                    each product in prods
                        article.card.product-item 
                            header.card__header 
                                h1.product__title #{product.title}
                            div.card__image 
                                img(src="https://www.shutterstock.com/image-photo/kuantan-malaysia-april-26-2018-260nw-1078032143.jpg", alt="")
                            div.card__content 
                                h2.product__price $19.99
                                p.product__description A very interesting book about 
                            .card__actions 
                                button.btn Add to Cart 
            else 
                h1 No Products...